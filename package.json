{
  "name": "ige-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "dev:church": "turbo dev --filter=@ige/church",
    "dev:forja": "turbo dev --filter=@ige/forja",
    "build:church": "turbo build --filter=@ige/church",
    "build:forja": "turbo build --filter=@ige/forja"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "npm@10.8.0"
}
